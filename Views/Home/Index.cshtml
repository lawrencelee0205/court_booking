@{
    ViewData["Title"] = "Home Page";
    Layout = "_Main";
}
<div class="text-center mx-auto mb-5 login_form"  style="width:50%;  max-width:300px;">
    <div class="form">
        <h1 class="h3 mb-3 font-weight-normal" >Please sign in</h1>
        <form class="form-signin " method="post" asp-contorller="Profile" asp-action="Login">
            <div class="mb-1">
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="text" name="Name" class="form-control" placeholder="Name">
            </div>
            <div>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" name="Password" class="form-control" placeholder="Password">
            </div>
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
        <p id="Register">No account? Register <a  asp-action="Register">Here</a></p>
    </div>
</div>

