@model IEnumerable<Court_booking.Models.Court>
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "AddBooking";
    Layout = "_Layout";
    int? User_id = Context.Session.GetInt32("Session_Id");
}

<h2>AddBooking</h2>
<br />
<div class="myview">
    <div class="col-md-4">
        <form action="Add">
            <div class="form-group">
                <label class="control-label">Date</label>
                <input id="book_date_time" name="book_date_time" class="form-control" type="datetime-local" />
            </div>
            <input id="user_id" name="user_id" type="hidden" value="@User_id" />
            <div class="form-group ">
                <label class="control-label">Court type</label>
                <select id="court_type" name="court_type" class="form-control">
                    <option value="" disabled selected>Select your option</option>
                    @foreach (var c in Model)
                    {
                        <option value="@c.Id">@c.Type</option>
                    }

                </select>
            </div>
            <div class="form-group ">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Booking"><input type="button" class="btn btn-danger" value="Cancel" /></a>
            </div>
        </form>
    </div>
</div>
