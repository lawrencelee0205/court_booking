@model IEnumerable<Court_booking.ViewModel.BookingView>
@{
    ViewData["Title"] = "Booking";
}

<h2>Booking</h2>
<form asp-action="Search_customer_name">
    <p>
        Title: <input type="text" name="customer_name" />
        <input type="submit" value="Filter" />
    </p>
</form>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Date Time</th>
                <th>Court</th>
                <th>Customer</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var b in Model)
            {
            <tr>
                <td>
                    @b.booking.Book_time
                </td>
                <td>
                    @b.court_type
                </td>
                <td>
                    @b.people.Name
                </td>
                <td>
                    <a asp-action="DeleteBooking" asp-route-id="@b.booking.Id">Delete</a> |
                    <a>Edit</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}



